# Flask Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=False
FLASK_PORT=5001

# Authentication
# IMPORTANT: Change these credentials!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password

# VPN Network Configuration
VPN_SUBNET=10.0.0.0/24
VPN_SERVER_IP=10.0.0.1
VPN_START_IP=10.0.0.2
WIREGUARD_PORT=51820
WIREGUARD_INTERFACE=wg0

# WireGuard Paths (auto-detected based on OS)
# macOS: /usr/local/etc/wireguard
# Linux: /etc/wireguard
# Leave empty for auto-detection
WIREGUARD_CONFIG_DIR=

# Public Network Interface (auto-detected if empty)
# macOS: usually en0 (Ethernet) or en1 (Wi-Fi)
# Linux: usually eth0, ens3, or ens5
PUBLIC_INTERFACE=

# Port Forwarding Configuration
MIN_PUBLIC_PORT=1024
MAX_PUBLIC_PORT=65535

# Session Configuration
SESSION_TIMEOUT_HOURS=24

# Database Path (leave empty for default: ./database.db)
DATABASE_PATH=
